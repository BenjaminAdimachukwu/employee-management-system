# =============================================
# PRODUCTION ENVIRONMENT TEMPLATE
# For deployment to production servers
# =============================================

# JWT Security - MUST SET IN PRODUCTION
# Use secret manager or CI/CD variables
JWT_SECRET=REPLACE_WITH_PRODUCTION_SECRET_FROM_VAULT

# Production Database
DB_HOST=production-postgres-cluster.cluster-abc123.us-east-1.rds.amazonaws.com
DB_PORT=5432
DB_NAME=employee_management_prod
DB_USERNAME=app_prod_user
DB_PASSWORD=REPLACE_WITH_PRODUCTION_DB_PASSWORD

# Spring Profiles
SPRING_PROFILES_ACTIVE=prod

# Production Service URLs
EUREKA_SERVER_URL=http://eureka-service:8761/eureka/
CONFIG_SERVER_URL=http://config-server:8888

# Production Specific Settings
SERVER_PORT=8080
LOG_LEVEL=INFO
MANAGEMENT_ENDPOINTS_WEB_EXPOSURE_INCLUDE=health,info,metrics

# Memory Settings (Production tuning)
JAVA_OPTS=-Xmx512m -Xms256m